<div class="signupcontainer">
	<div class="signup">
		<h1>Sign up!</h1>
		<%= form_for(@user) do |f| %>
		<p>
				<%= f.label :name %>:<br>
				<%= f.text_field :name, size: 25, autofocus: true %>
			</p>
			<p>
				<%= f.label :email %>:<br>
				<%= f.text_field :email, size: 25 %>
			</p>
			<p>
				<%= f.label :password %>:<br>
				<%= f.password_field :password, size: 25 %>
			</p>
			<p>
				<%= f.label :password_comfirmation, "Confirm Password" %>:<br>
				<%= f.password_field :password_comfirmation, size: 25 %>
			</p>
				<% @avatars.each do |avatar| %>
				<%= image_tag avatar %>
				<%= f.radio_button :image_url, avatar %>
			<% end %><br><br>

			<%= f.submit %>
		 	<% flash.each do |key, value| %>
		     	<%= content_tag(:p, value) %>
			<% end %>
		<% end %>
	</div>
</div>

